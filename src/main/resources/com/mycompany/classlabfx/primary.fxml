<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.classlabfx.PrimaryController">
   <children>
      <Label text="I LOVE JAVA FX" textAlignment="CENTER" textFill="#13bcda">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label text="Primary View" textFill="#ae561b">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Switch to Secondary View" textFill="#4bb21e" />
      <Button mnemonicParsing="false" onAction="#handleShowMessageButton" text="Show Message" />
      <Label fx:id="LabelMessage" text="Label Message" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
